 <table class="table">
        <thead>
          <tr>
               <th>Name</th>
            <th>Date</th>  
            <th>Buyer</th>
          </tr>
        </thead>
        <tbody>
        <% @sales.each do |sale| %> 
          <tr>
            <td><%= link_to sale.book.name, pickup_path(sale.guid)  %></td>
            <td><%= time_ago_in_words(sale.created_at) %>  </td>
            <td><%= sale.buyer_email %></td>
          </tr>
        <% end %>
        </tbody>
      </table>